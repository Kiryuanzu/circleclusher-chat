<div class="form">
  <%= form_for(@kakoimessage) do |f| %>
    <%= f.text_area :text, cols:"60", placeholder:"適当に話しかけてください", rows:"3", required: true %>
    <%= f.hidden_field :kakoi_room_id, value: @kakoiroom.id %>
    <%= f.submit "メッセージを投稿", :class =>"btn btn-primary message-button" %>
  <% end %>
</div>